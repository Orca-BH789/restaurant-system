{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "AllowedOrigins": [
    "http://localhost:5173",
    "https://yourdomain.com"
  ],
  "PathBase": "/core",
  "ConnectionStrings": {
    "DefaultConnection": "Server=YOUR_SERVER;Initial Catalog=RestaurantManagement;Integrated Security=True;Connect Timeout=30;"
  },
  "Jwt": {
    "Issuer": "RestaurantManagementAPI",
    "Audience": "RestaurantManagementClient"
  },
  "EmailSettings": {
    "Email": "YOUR_EMAIL@gmail.com",
    "Password": "YOUR_APP_PASSWORD_HERE",
    "Host": "smtp.gmail.com",
    "DisplayName": "Restaurant Management Support",
    "Port": 587
  },
  "Gemini": {
    "ApiKey": "YOUR_GEMINI_API_KEY_HERE",
    "Model": "gemini-2.0-flash"
  },
  "Payment": {
    "VietQR": {
      "Enabled": true,
      "SepayApiUrl": "https://my.sepay.vn/userapi",
      "SepayApiKey": "YOUR_SEPAY_API_KEY",
      "BankAccountNumber": "YOUR_BANK_ACCOUNT",
      "BankAccountName": "YOUR_NAME",
      "BankName": "YOUR_BANK",
      "BankCode": "YOUR_BANK_CODE"
    },
    "PayPal": {
      "Enabled": true,
      "Mode": "Sandbox",
      "ClientId": "YOUR_PAYPAL_CLIENT_ID_HERE",
      "ClientSecret": "YOUR_PAYPAL_CLIENT_SECRET_HERE",
      "SandboxApiUrl": "https://api.sandbox.paypal.com",
      "LiveApiUrl": "https://api-m.paypal.com"
    }
  }
}
